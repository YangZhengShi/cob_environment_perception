<?xml version="1.0"?>
<launch>
  <arg name="debug_mode" default="false"/>
  <node if="$(arg debug_mode)" ns="geometry_map" pkg="cob_3d_mapping_geometry_map"
        type="geometry_map_node" name="geometry_map" output="screen" launch-prefix="gdb -ex run --args">
    <remap from="shape_array" to="/segmentation/shape_array"/>
    <param name="file_path" type="string" value="/Bag_Files/kitchen_table_chair"/>
    <param name="save_to_file" type="bool" value="false"/>
    <param name="map_frame_id" type="string" value="/map" />
    <param name="d" type="double" value="0.02" />
    <param name="cos_angle" type="double" value="0.98" /><!-- arccos(x)*180/PI -->
    <param name="disable_cyl" type="bool" value="true" />
    <param name="disable_poly" type="bool" value="false" />
    <param name="enable_tf" type="bool" value ="true" />
  </node>

  <node unless="$(arg debug_mode)" ns="geometry_map" pkg="cob_3d_mapping_geometry_map"
        type="geometry_map_node" name="geometry_map" output="screen">
    <!--remap from="table_hull" to="/swissranger/pointcloud2_raw"/-->
    <remap from="shape_array" to="/segmentation/shape_array"/>
    <!--param name="file_path" type="string" value="/media/GOADaten/Daten/20110823_bagfiles/kitchen_empty/map/"/-->
    <param name="file_path" type="string" value="/Bag_Files/kitchen_table_chair"/>
    <param name="save_to_file" type="bool" value="false"/>
    <param name="map_frame_id" type="string" value="/map" />
    <param name="d" type="double" value="0.05" />
    <param name="cos_angle" type="double" value="0.97" /><!-- arccos(x)*180/PI -->
    <param name="enable_tf" type="bool" value ="true" />
    <param name="enable_cyl" type="bool" value="false" />
    <param name="enable_poly" type="bool" value="true" />
  </node>
</launch>
