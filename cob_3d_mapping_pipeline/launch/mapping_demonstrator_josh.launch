<?xml version="1.0"?>
<launch>

	<!-- uses sim time (rosbag time) -->
<!-- 	<param name="/use_sim_time" value="True"/> -->

	<!-- Rosbag: Platform, Odometry, front and rear lasers and clock in FME Big Door environment-->
	<node	pkg="rosbag"
		type="rosbag"
		name="rosbag"
		args="play --clock -s 3 -r 0.3 /home/josh/workspace/cob_3d_mapping_slam/test/moving_demo_with_tf.bag "/>	
                
  <node pkg="cob_3d_mapping_slam" type="slam_node" name="slam" output="screen" >
  	<param name="frame_id" value="/base" />
  	<param name="world_id" value="/camera_depth_optical_frame" />

  	<param name="invert" value="true" />
  	<param name="use_odometry" value="true" />
  </node>

</launch>

