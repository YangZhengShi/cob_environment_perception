<?xml version="1.0"?>
<launch>
  <node pkg="pcl_ros" type="pcd_to_pointcloud" name="pcd_to_pointcloud" 
	args="/home/goa-tz/data/table01_close1m_raw.pcd 1"/>

  <arg name="mapping_manager" value="mapping_manager"/>
  <node pkg="nodelet" type="nodelet" name="$(arg mapping_manager)" args="manager" output="screen"/>
  <node pkg="nodelet" type="nodelet" name="segmentation" 
	args="load cob_3d_segmentation/SegmentationAllInOneNodelet $(arg mapping_manager)" output="screen">
    <remap from="cloud_in" to="cloud_pcd"/>
  </node>
  <node ns="geometry_map" pkg="cob_3d_mapping_geometry_map" type="geometry_map_node" name="geometry_map" output="screen">
    <param name="file_path" type="string" value="/Bag_Files/kitchen_table_chair"/>
    <param name="save_to_file" type="bool" value="false"/>
  </node>

</launch>

