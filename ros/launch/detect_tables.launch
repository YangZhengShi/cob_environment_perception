<launch>
  <!--node pkg="nodelet" type="nodelet" name="pcl_manager"  args="manager" output="screen"/-->
  
  
   <!-- Run a VoxelGrid filter to clean NaNs and downsample the data -->
  <node pkg="nodelet" type="nodelet" name="voxel_grid2" args="load pcl/VoxelGrid pcl_manager" output="screen">
    <remap from="~input" to="/aggregate_point_map/pc_aligned"/>
    <rosparam>
      filter_field_name: z
      filter_limit_min: 0.2
      filter_limit_max: 2
      filter_limit_negative: False
      leaf_size: 0.005
    </rosparam>
  </node>

  <node pkg="nodelet" type="nodelet" name="detect_tables" args="load cob_env_model/DetectTables pcl_manager" output="screen">
  	<!--remap from="point_cloud2" to="/aggregate_point_map/pc_aligned"/-->
  	<!--remap from="point_cloud2" to="/aggregate_point_map/map"/-->
  	<remap from="point_cloud2" to="/voxel_grid2/output"/>
  </node>    
  
  <!--node pkg="nodelet" type="nodelet" name="tabletop_objects_clusters" args="load pcl/EuclideanClusterExtraction pcl_manager" output="screen">
    <remap from="~input"   to="/object_cluster" />
    <rosparam>
      cluster_tolerance: 0.06
      cluster_min_size: 30
      max_clusters: 10
      spatial_locator: 1
    </rosparam>
  </node-->
               
</launch>